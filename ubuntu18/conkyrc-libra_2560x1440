${endif}
${if_existing /sys/class/net/enp0s20u2u2i5/operstate up}
${goto 30}${color0}${font Poky:size=17}${font}${voffset -25}${color0}Down ${downspeed enp0s20u2u2i5}/s ${alignr}Up ${upspeed enp0s20u2u2i5}/s
